                    </VBox.margin>
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/images/libro.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Button fx:id="gestioneSButton" mnemonicParsing="false" onAction="#openStudentInterface" prefHeight="77.0" prefWidth="337.0" style="-fx-background-color: green; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 5, 0.0, 0, 1);" text="Gestione Studenti" textAlignment="CENTER" textFill="WHITE">
