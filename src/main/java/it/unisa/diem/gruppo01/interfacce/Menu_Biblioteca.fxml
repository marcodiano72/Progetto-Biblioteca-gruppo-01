                    <font>
                        <Font size="18.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/images/prestiti.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="gestioneEButton" mnemonicParsing="false" onAction="#openExitInterface" prefHeight="77.0" prefWidth="337.0" style="-fx-background-color: red; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 5, 0.0, 0, 1);" text="Esci" textFill="WHITE">
                    <VBox.margin>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="20.0" />
                    </VBox.margin>
                    <font>
                        <Font size="18.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/images/Exit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </children>
