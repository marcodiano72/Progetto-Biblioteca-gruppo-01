<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.diem.gruppo01.interfacce.Menu_BibliotecaController">
    <children>
        <Label layoutX="272.0" layoutY="14.0" text="MENU' BIBLIOTECA">
            <font>
